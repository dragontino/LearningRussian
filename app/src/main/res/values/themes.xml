<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ИзучаемРоднойЯзык" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>

        <!-- Customize your theme here. -->
        <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>
        <item name="bottomSheetDialogTheme">@style/Theme.MaterialComponents.BottomSheetDialog</item>
    </style>



    <style name="SwitchTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorControlActivated">@color/raspberry</item>
        <item name="colorSwitchThumbNormal">@color/light_gray</item>
        <item name="android:colorForeground">@android:color/darker_gray</item>
    </style>

    <!--TODO удалить-->
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/pink</item>
    </style>

    <style name="TabStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/xarrovv</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="AnswerButtonsStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/xarrovv</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">25dp</item>
        <item name="android:background">@drawable/button_style_dark</item>
        <item name="android:visibility">gone</item>
    </style>


    <style name="Widget.MaterialComponents.TimePicker.Light" parent="Widget.MaterialComponents.TimePicker">
        <item name="android:numbersInnerTextColor">@color/black</item>
        <item name="android:numbersTextColor">@color/black</item>
        <item name="android:numbersBackgroundColor">@color/light_gray</item>
    </style>

    <style name="Widget.MaterialComponents.TimePicker.Dark" parent="Widget.MaterialComponents.TimePicker">
        <item name="android:numbersInnerTextColor">@color/white</item>
        <item name="android:numbersTextColor">@color/white</item>
        <item name="android:numbersBackgroundColor">@color/gray</item>
    </style>

    <style name="NormalTextViewTheme">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_margin">@dimen/activity_horizontal_margin</item>
    </style>


    <style name="Widget.AppCompat.SeekBar.Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/layout_margin</item>
        <item name="android:max">10000</item>
        <item name="android:min">100</item>
        <item name="android:thumbTint">@color/raspberry</item>
        <item name="android:progressDrawable">@drawable/seek_bar</item>
        <item name="android:thumb">@drawable/seek_thumb</item>
    </style>

</resources>