<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.learning.ruslan">

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@drawable/icon3"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.ИзучаемРоднойЯзык">
        <activity android:name=".ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.LibraryActivity"
            android:label="@string/library_label" />
        <activity
            android:name=".ui.ParonymActivity"/>
        <activity
            android:name=".ui.SettingsActivity"
            android:label="@string/settings_title" />
        <activity
            android:name=".ui.DoubleFragmentActivity"
            android:configChanges="keyboardHidden|orientation"/>
        <activity
            android:name=".ui.TimePickerActivity"
            android:theme="@style/Theme.AppCompat.DayNight.Dialog"/>
    </application>

</manifest>